@model blogSitesi.Models.BlogPost

@{
    ViewData["Title"] = "Blog Yazısı Detayları";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h2>@Model.Title</h2>
    <p><strong>Yayın Tarihi:</strong> @Model.CreatedDate.ToString("dd MMMM yyyy")</p>
    <p><strong>Güncelleme Tarihi:</strong> @Model.UpdatedDate.ToString("dd MMMM yyyy")</p>
    <p><strong>İçerik:</strong></p>
    <p>@Model.Content</p>
    @if (!string.IsNullOrEmpty(Model.ImagePath))
    {
        <p><strong>Görsel:</strong></p>
        <img src="@Model.ImagePath" alt="Blog Görseli" style="max-width: 100%; height: auto;" />
    }
</div>

<div class="mt-3">
    <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-primary">Düzenle</a>
    <a href="@Url.Action("Anasayfa")" class="btn btn-secondary">Geri Dön</a>
</div>
